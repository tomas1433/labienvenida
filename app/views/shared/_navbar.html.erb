<div class="navbar-wagon">
  <!-- Logo -->
  <a href="/" class="navbar-wagon-brand">
    <%= image_tag "logo.png" %>
  </a>
<% if user_signed_in? %>
  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <!-- Search form -->
    <form action="" class="navbar-wagon-search">
      <input type="text" class="navbar-wagon-search-input" placeholder="En que ciudad alquilas?">
      <button type="submit" class="navbar-wagon-search-btn">
        <i class="fa fa-search"></i>
      </button>
    </form>

    <!-- Text link -->
    <a href="/contact" class="navbar-wagon-item navbar-wagon-link">Contactarnos</a>

    <!-- Notification link-->
    <a href="" class="navbar-wagon-item navbar-wagon-link">
      <div class="badge-container">
        <i class="fa fa-envelope-o"></i>
        <div class="badge badge-blue">3</div>
      </div>
    </a>

    <!-- Profile picture and dropdown -->
    <div class="navbar-wagon-item">
      <div class="dropdown">
        <% if current_user.avatar? %>
   <%= cl_image_tag current_user.avatar.path, width: 50, height: 50, crop: :fill, class: 'avatar dropdown-toggle', id: 'navbar-wagon-menu', :'data-toggle' => 'dropdown' %>
        <% else %>
         <img src="http://placehold.it/50x50" class="avatar dropdown-toggle" id="navbar-wagon-menu" data-toggle="dropdown">
        <% end %>


        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li><%= link_to 'Editar mi perfil',  edit_user_registration_path %></li>
          <li><%= link_to 'Mis solicitudes',  purchases_path %></li>
          <li><%= link_to 'Mis anuncios',  seller_path %></li>
          <li><%= link_to 'Mis Tareas',  sales_path %></li>
          <li><%= link_to 'Desconectarse', destroy_user_session_path, method: :delete %></li>

        </ul>
      </div>
    </div>

    <!-- Button (call-to-action) -->
<%= link_to 'Crea un anuncio ', new_service_path, class: "navbar-wagon-item navbar-wagon-button btn" %>
  </div>

  <!-- Dropdown appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
       <% if current_user.avatar? %>
   <%= cl_image_tag current_user.avatar.path, width: 50, height: 50, crop: :fill, class: 'avatar dropdown-toggle', id: 'navbar-wagon-menu', :'data-toggle' => 'dropdown' %>
        <% else %>
         <img src="http://placehold.it/50x50" class="avatar dropdown-toggle" id="navbar-wagon-menu" data-toggle="dropdown">
        <% end %>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li><%= link_to 'Mis solicitudes',  purchases_path %></li>
        <li><%= link_to 'Mis anuncios',  seller_path %></li>
        <li><%= link_to 'Mis Tareas',  sales_path %></li>
        <li><%= link_to 'Editar mi perfil', edit_user_registration_path %></li>
        <li><%= link_to 'Crea un anuncio', new_service_path %></li>
        <li><%= link_to 'Desconectarse', destroy_user_session_path, method: :delete %></li>
      </ul>
    </div>
  </div>
  <% else %>
<%= link_to "Connectarse", new_user_session_path, class: "navbar-wagon-item navbar-wagon-link hidden-xs "%>
<%= link_to "Crear cuenta", new_user_registration_path, class: "navbar-wagon-item navbar-wagon-link hidden-xs " %>
   <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li><%= link_to "Connectarse", new_user_session_path, class: "navbar-wagon-item navbar-wagon-link"%></li>
          <li><%= link_to "Crear cuenta", new_user_registration_path, class: "navbar-wagon-item navbar-wagon-link" %></li>

      </ul>
    </div>
  </div>

  <% end %>
</div>